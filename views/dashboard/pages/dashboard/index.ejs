    <script>
        $('.actionate').on('click', e=>{
            const _csrf = "<%=csrfToken%>"
           const data = $(e.target).attr('data-id');
           const url = $(e.target).attr('data-url');

     swal({
        title: 'Are you sure?',
        type: 'warning',
        showCancelButton: true,
        confirmButtonText: 'Confirm',
        padding: '2em'
      })
      .then(function (x) {
        if (x.value) {
            $.ajax({
            url,
            method: "POST",
            data: {id: data, _csrf},
            dataType: "JSON",
            success: (res) => {
                     $("#activityBody").empty()
                response(res.alert, res.response)
                res.redirect.map((e,i) =>{
                     var html = "<tr><td>"+ (i+1) +"</td> <td>"+ e.itemType +"</td> <td>"+ e.itemTitle +"</td>  <td>"+ e.count +"</td> <td>"+ e.updatedAt +"</td> </tr>"
                     $("#activityBody").append(html)
                })
               


                if(res.response != 'Fetched'){
                setTimeout(() => {
                    location.reload()
                }, 3000);
                }else{

                }
            },
            error: function (err) {
                console.log(err);
                
            }
           })
        }
      })
          
           

        })
    </script>
