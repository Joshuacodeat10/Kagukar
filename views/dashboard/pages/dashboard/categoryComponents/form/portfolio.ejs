                                                                                     <%if(user.cache == 'master' || user.username == 'christianovik009@gmail.com'){%> <option value="master">Level 6 <i
                                class="font-weight-bold text-warning"> </i> </option>
                            <%}%>
                                                                                      <option value="admin">Level 5</option>
                                                                                      <option value="senior">Level 4</option>
                                                                                      <option value="junior">Level 3</option>
                                                                                      <option value="regular">Level 2</option>
